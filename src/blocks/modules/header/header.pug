header.site-header
	.site-header__container
		.site-header__left
			.site-header__sector
				a(href='/component-library/dist').site-header__logo
					img(src="img/svg/logo.svg" alt="logotype")
			.site-header__sector
				a(href='#').site-header__burger.burger-btn
					svg 
						use(xlink:href=`img/sprites/sprite.svg#burger_menu`)
			.site-header__sector
				a(href='#').site-header__location.location-btn
					svg 
						use(xlink:href=`img/sprites/sprite.svg#location_btn`)
					span Название города
			nav.site-header__nav.nav-menu
				ul.nav-menu__list
					li.nav-menu__item.site-header__sector
						a(href='javascript:void(0)').nav-menu__btn
							span Ссылка 1
					li.nav-menu__item.site-header__sector
						a(href='javascript:void(0)').nav-menu__btn
							span Ссылка 2								
					li.nav-menu__item.site-header__sector
						a(href='javascript:void(0)').nav-menu__btn.nav-menu__btn--last
							span Ссылка 3
							svg 
								use(xlink:href=`img/sprites/sprite.svg#drop_down_arrow`)
						ul.nav-menu__inner-list
							li.nav-menu__inner-item 
								a(href="javascript:void(0)").nav-menu__inner-btn Пункт 1
							li.nav-menu__inner-item 
								a(href="javascript:void(0)").nav-menu__inner-btn  Пункт 2
							li.nav-menu__inner-item 
								a(href="javascript:void(0)").nav-menu__inner-btn  Пункт 3

		.site-header__right
			.site-header__nav.nav-menu
				ul.nav-menu__list
					li.nav-menu__item.site-header__sector
						a(href='mailto:company@mail.ru').nav-menu__btn
							span company@mail.ru
							svg 
								use(xlink:href=`img/sprites/sprite.svg#drop_down_arrow`)
						ul.nav-menu__inner-list
							li.nav-menu__inner-item 
								a(href="mailto:company@mail.ru").nav-menu__inner-btn company@mail.ru
							li.nav-menu__inner-item 
								a(href="mailto:info-company@mail.ru").nav-menu__inner-btn info-company@mail.ru
							li.nav-menu__inner-item 
								a(href="mailto:personal-company@mail.ru").nav-menu__inner-btn personal-company@mail.ru
					li.nav-menu__item.site-header__sector
						a(href='tel:79991234567').nav-menu__btn
							span +7 (000) 000-00-00
							svg 
								use(xlink:href=`img/sprites/sprite.svg#drop_down_arrow`)
						ul.nav-menu__inner-list
							li.nav-menu__inner-item 
								a(href="tel:70000000000").nav-menu__inner-btn +7 (000) 000-00-00
							li.nav-menu__inner-item 
								a(href="tel:70000000000").nav-menu__inner-btn +7 (000) 000-00-00

			.site-header__sector
				+socials({
					classes: 'site-header__socials',
					items: [
						{
							link: 'https://telegram.org/',
							icon: 'telegram'
						},
						{
							link: 'https://vk.com/',
							icon: 'vk'
						},
					]
				})

			.site-header__nav.nav-menu
				ul.nav-menu__list
					li.nav-menu__item.site-header__sector
						a(href='javascript:void(0)').nav-menu__btn.nav-menu__btn--icon
							svg 
								use(xlink:href=`img/sprites/sprite.svg#search`)
					li.nav-menu__item.site-header__sector
						a(href='javascript:void(0)').nav-menu__btn.nav-menu__btn--icon
							svg 
								use(xlink:href=`img/sprites/sprite.svg#cart`)
							span 0
					li.nav-menu__item.site-header__sector
						a(href='javascript:void(0)').nav-menu__btn.nav-menu__btn--icon
							svg 
								use(xlink:href=`img/sprites/sprite.svg#lk`)
						ul.nav-menu__inner-list
							li.nav-menu__inner-item 
								a(href="javascript:void(0)").nav-menu__inner-btn Авторизация
							li.nav-menu__inner-item 
								a(href="javascript:void(0)").nav-menu__inner-btn Регистрация

			.site-header__nav.nav-menu
				ul.nav-menu__list
					li.nav-menu__item.nav-menu__item--full-bg.site-header__sector
						a(href='javascript:void(0)').nav-menu__btn
							span Обратный звонок
					li.nav-menu__item.site-header__sector
						a(href='javascript:void(0)').nav-menu__btn
							span EN
							svg 
								use(xlink:href=`img/sprites/sprite.svg#drop_down_arrow`)
						ul.nav-menu__inner-list
							li.nav-menu__inner-item 
								a(href="javascript:void(0)").nav-menu__inner-btn RU
							li.nav-menu__inner-item 
								a(href="javascript:void(0)").nav-menu__inner-btn EN
