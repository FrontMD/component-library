        .intro-slider__controls(data-js='sliderControls')
            +slider-btn({
                classes: "intro-slider__control",
                direction: 'prev'
            })
            +slider-btn({
                classes: "intro-slider__control",
                direction: 'next'
            })
            .intro-slider__pagination(data-js='sliderPagination')