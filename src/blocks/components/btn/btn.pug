-
    const defaultBtnProps = {
        classes: '',
        tag: 'link',
        link: 'javascript:void(0);',
        buttonType: 'button',
        vMode: 'btn',
        text: 'Кнопка',
        cMode: 'transparent',
        icon: false,
        iconName: '',
        iconName2: '',
        arrow: false,
    }

mixin btn(props = defaultBtnProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultBtnProps.classes,
            tag: props.tag ? props.tag : defaultBtnProps.tag,
            link: props.link ? props.link : defaultBtnProps.link,
            buttonType: props.buttonType ? props.buttonType : defaultBtnProps.buttonType,
            text: props.text ? props.text : defaultBtnProps.text,
            vMode: props.vMode ? props.vMode : defaultBtnProps.vMode,
            cMode: props.cMode ? props.cMode : defaultBtnProps.cMode,
            icon: props.icon ? props.icon : defaultBtnProps.icon,
            icon2: props.icon2 ? props.icon2 : defaultBtnProps.icon2,
            iconName: props.iconName ? props.iconName : defaultBtnProps.iconName,
            iconName2: props.iconName2 ? props.iconName2 : defaultBtnProps.iconName2,
            arrow: props.arrow ? props.arrow : defaultBtnProps.arrow,
        }

        let vModeClass = 'btn--' + checkProps.vMode
        let cModeClass = 'btn--' + checkProps.cMode

    if (checkProps.tag === 'button')
        button.btn(type=checkProps.buttonType class=vModeClass + ' ' + cModeClass + ' ' + checkProps.classes)&attributes(attributes)
            if(checkProps.icon)
                span.btn__icon 
                    svg 
                        use(xlink:href=`img/sprites/sprite.svg#${checkProps.iconName}`)
            if(checkProps.vMode !== 'icon')
                span.btn__text!= checkProps.text
            if(checkProps.arrow)
                span.btn__arrow
                    svg 
                        use(xlink:href=`img/sprites/sprite.svg#drop_down_arrow`)
    else if (checkProps.tag === 'link')
        a.btn(href=checkProps.link class=vModeClass + ' ' + cModeClass + ' ' + checkProps.classes)&attributes(attributes)
            if(checkProps.icon)
                if(checkProps.icon2)
                    span.btn__icon.btn__icon--desc
                        svg
                            use(xlink:href=`img/sprites/sprite.svg#${checkProps.iconName}`)
                    span.btn__icon.btn__icon--mob
                        svg
                            use(xlink:href=`img/sprites/sprite.svg#${checkProps.iconName2}`)
                else
                    span.btn__icon
                        svg
                            use(xlink:href=`img/sprites/sprite.svg#${checkProps.iconName}`)
            if(checkProps.vMode !== 'icon')
                span.btn__text!= checkProps.text
            if(checkProps.arrow)
                span.btn__arrow
                    svg 
                        use(xlink:href=`img/sprites/sprite.svg#drop_down_arrow`)